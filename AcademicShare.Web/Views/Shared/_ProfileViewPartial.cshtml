@inject AcademicShareDbContext _context
@inject SignInManager<User> SignInManager
@using Microsoft.AspNetCore.Identity

<div class="card mx-auto rounded-5 border-5 border-light shadow-lg mb-5">
    <div class="card"> <img class="card-img-top" src="@Model.Banner" alt="Card image cap">
        <div class="card-body little-profile text-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="pro-img">
                            <img src="@Model.ProfilePicture" alt="user">
                        </div>
                        <h4>
                            @Model.FullName
                        </h4>
                        <p>#@ViewBag.User.UserName</p>
                    </div>
                    <div class="col">
                        <div class="justify-content-center align-items-center">

                            <Partial name="_LinksPartial" model="@Model" />
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <p>@Model.Bio</p>

            @if (SignInManager.IsSignedIn(User) && ViewBag.User.Id == SignInManager.UserManager.GetUserId(User))
            {
                <hr>
                <div class="container m-2">
                    <div class="row justify-content-center">
                        <div class="col-6 col-sm-3">
                            <button class="btn btn-primary" type="button" asp-action="Edit">
                                Edit
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path
                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd"
                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                </svg>
                            </button>
                        </div>
                        <div class="col-6 col-sm-3">
                            <a asp-action="Create" asp-controller="Posts">

                                <button class="btn btn-primary" type="submit">
                                    Make a Post
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path
                                            d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg>
                                </button>
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <small class="text-muted">Created at @ViewBag.User.CreateAt</small>
        </div>
    </div>
</div>

<h2 class="text-center">Posts: @ViewBag.PostsCount</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var post in ViewBag.Posts)
    {
        <div class="col">
            <div class="card">
                <img src="../imagesPost/@post.Image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Content</p>
                    <p class="card-text"><small class="text-muted">@post.CreatedAt</small></p>
                </div>
            </div>
        </div>
    }
</div>